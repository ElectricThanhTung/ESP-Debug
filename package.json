{
  "name": "esp-debug",
  "displayName": "esp-debug",
  "description": "",
  "version": "0.0.1",
  "publisher": "ElectricThanhTung",
  "author": {
    "name": "ElectricThanhTung",
    "email": "electricthanhtung@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ElectricThanhTung/ESP-Debug.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebugResolve:esp-debug",
    "onDebugDynamicConfigurations:esp-debug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [
      {"language": "c"},
      {"language": "cpp"}
    ],
    "debuggers": [
      {
          "type": "esp-debug",
          "languages": ["c", "cpp"],
          "label": "ESP Debug",
          "program": "./out/extension.js",
          "runtime": "node",
          "configurationAttributes": {
            "launch": {
              "required": ["program", "port"],
              "properties": {
                "cwd": {
                  "type": "string",
                  "description": "The current working directory of the executed program",
                  "default": "${workspace}"
                },
                "program": {
                  "type": "string",
                  "description": "Path to program file (elf file)",
                  "default": "${workspace}"
                },
                "port": {
                  "type": "string",
                  "description": "COM Port to connect to device",
                  "default": "COMx"
                },
                "baudrate": {
                  "type": "number",
                  "description": "Serial baudrate value",
                  "default": 115200
                }
              }
            }
          },
          "initialConfigurations": [
            {
              "type": "esp-debug",
              "request": "launch",
              "name": "ESP Program",
              "program": "build/main.elf",
              "port": "COMx"
            }
          ],
          "configurationSnippets": [
            {
              "description": "A new configuration for ESP Debug",
              "body": {
                "type": "esp-debug",
                "request": "launch",
                "name": "ESP Program",
                "program": "build/main.elf",
                "port": "COMx"
              }
            }
          ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.56.0"
  }
}
